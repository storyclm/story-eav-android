<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AttributeKeyStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/bg_item_attr_key</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AttributeValueStyle" parent="Widget.AppCompat.TextView">
        <item name="android:maxWidth">197dp</item>
        <item name="android:minWidth">197dp</item>
        <item name="android:background">@drawable/bg_item_attr_value</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FormAddItemFieldHint" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black_38</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>