<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <expert.rightperception.attributesapp.ui.configurator.widget.NestedAttributeWidget
        android:id="@+id/item_form_input_name_naw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:key="input_1"
        app:value_type="string" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="0dp">

        <expert.rightperception.attributesapp.ui.configurator.widget.NestedAttributeWidget
            android:id="@+id/item_form_bg_color_naw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:key="background_color"
            app:value_type="color" />

        <expert.rightperception.attributesapp.ui.configurator.widget.NestedAttributeWidget
            android:id="@+id/item_form_font_color_naw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:key="font_color"
            app:value_type="color" />

        <expert.rightperception.attributesapp.ui.configurator.widget.NestedAttributeWidget
            android:id="@+id/item_form_font_size_naw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:key="font_size"
            app:value_type="integer" />

        <expert.rightperception.attributesapp.ui.configurator.widget.NestedAttributeWidget
            android:id="@+id/item_form_input_value_naw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:key="input_value"
            app:locked="true"
            app:value_type="string" />

    </LinearLayout>

</LinearLayout>